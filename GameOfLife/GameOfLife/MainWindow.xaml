<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <DockPanel Background="SandyBrown">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="startGame" Content="Játék" Margin="0,0,0,20" Background="Brown"  Width="150" Height="100" Click="StartGame_Click"/>
            <Button x:Name="exit" Content="Kilépés" Width="150" Background="Beige"  Height="100" Click="Exit_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
