<Window x:Class="GameOfLife.Win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Win" Height="450" Width="800" Background="Crimson">
    <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox DockPanel.Dock="Top" Width="402" Height="112" Margin="20" FontSize="80" Background="Crimson" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">TIME OUT!</TextBox>
        <Button x:Name="Menu" Click="Menu_Click" DockPanel.Dock="Left" Width="152" Height="40" Background="BlanchedAlmond" Margin="20">Menü</Button>
        <Button x:Name="Palya" Click="Palya_Click" DockPanel.Dock="Right" Width="154" Height="40" Background="BlanchedAlmond" Margin="20">Új pálya</Button>
    </DockPanel>
</Window>
